<?xml version="1.0"?>
<ruleset name="LifterLMS Blocks">
    <description>LifterLMS Blocks rules for PHP_CodeSniffer</description>

    <file>.</file>

    <exclude-pattern>tests/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>

    <arg name="extensions" value="php"/>
    <arg value="sp"/>

    <rule ref="LifterLMS">
    </rule>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" value="lifterlms" />
		</properties>
	</rule>

	<!-- ##### SNIFF FOR PHP CROSS-VERSION COMPATIBILITY ##### -->
	<config name="testVersion" value="5.6-"/>
	<rule ref="PHPCompatibilityWP"/>

	<!-- ##### Documentation Sniffs vs empty index files ##### -->

	<!-- Exclude the 'empty' index files from some documentation checks -->
	<rule ref="Squiz.Commenting.FileComment">
		<exclude-pattern>*/index\.php</exclude-pattern>
	</rule>

</ruleset>
